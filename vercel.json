{
    "version": 2,
    
    "builds":[
        {
            "src": "public/**/*",
            "use": "@vercel/static" 
        },
        
       { "src": "node_modules", "installCommand": "npm run vercel-build" }
    ],

    "routes": [
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        },

        {
            "src": "/(.*)",
            "dest": "/api/script.php"
        }
    ]

}