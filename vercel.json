{
    "version": 2,
    
    "builds":[
        {
            "src": "public/**/*",
            "use": "@vercel/static" 
        },
        {
            "src": "api/**/*.php",
            "use": "@vercel/php",
            "config": {
            "installCommand": "npm install && npm run vercel-build"
            }
          }
    ],

    "routes": [
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        },

        {
            "src": "/(.*)",
            "dest": "/api/script.php"
        }
    ]

}