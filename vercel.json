{
    "version": 2,
    "builds": [
      {
        "src": "PythonBackend/plant_disease_detection.py",
        "use": "@vercel/python",
        "config": {
          "installcommand" :"pip install -r requirements.txt"
        }
      },
      {
        "src": "index.html",
        "use": "@vercel/static"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      },
       
      { "src": "api/script.php", "use": "vercel-php@0.6.0" }
      
    ],
    
    "functions": {
        "api/**/*.php": { "runtime": "vercel-php@0.6.0" }
    },
  
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        },
        { 
            "src": "/(.*)", 
            "dest": "/api/script.php"
         }
       
    ]
}
