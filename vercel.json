{
    "version": 2,

  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.2"
    }
  },
    "builds": [
      {
        "src": "PythonBackend/plant_disease_detection.py",
        "use": "@vercel/python",
        "config": {
          "installcommand" :"pip install -r requirements.txt"
        }
      },
      {
        "src": "index.html",
        "use": "@vercel/static"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }

    ],

    "routes": [
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        },
        {
          "src": "/api/script.php",
          "dest": "/api/script.php"
        }
       
    ]
}
