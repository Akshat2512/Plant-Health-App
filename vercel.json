{
    "version": 2,
    "builds": [
      {
        "src": "PythonBackend/plant_disease_detection.py",
        "use": "@vercel/python",
        "config": {
          "installcommand" :"pip install -r requirements.txt"
        }
      },
      {
        "src": "index.html",
        "use": "@vercel/static"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      },
      {  "src": "api/**/*.php",
         "use": "vercel-php@0.5.2"
       }

    ],
  
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        },
        {
            "src": "/script.php",
            "dest": "/script.php"
        }
       
    ]
}
